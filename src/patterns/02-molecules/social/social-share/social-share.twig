{% spaceless %}
	{#
	* Renders the social sharing component
	*
	* @param  {string}  component_class      The CSS class of this component
	* @param  {string}  version              Optional version. Uses a BEM modifier
	* @param  {string}  parent_class     	 CSS class of the parent component
	* @param  {string}  extra_class          optional extra CSS class
	* @param  {object}  post                 holds the title and link of the page / post to be shared
	* @param  {object}  site                 holds general site info. Like the site name
	#}

	{% set component_class = "m-social-share" %}
	{% set version         = version      ? component_class ~ "--" ~ version                              | join("") %}
	{% set parent          = parent_class ? parent_class    ~ "__" ~ component_class|replace({"m-" : ""}) | join("") %}
	{% set js_hook         = "js-social-share" %}

	<div class="{{ parent }} {{ component_class }} {{ version }} {{ extra_class }}" data-module="socialShare">
		<div class="{{component_class}}__inner">
			<div class="{{component_class}}__title">Share</div>
			<div class="{{component_class}}__links-wrapper">
				<a class="{{ component_class }}__link {{ component_class }}__link--facebook {{ js_hook }}" href="https://www.facebook.com/sharer/sharer.php?u={{ post.link | url_encode }}" target="_blank">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="31" viewBox="0 0 16 31">
						<g>
							<g>
								<path fill="#fff"
									  d="M15.065 17.375l.833-5.43h-5.21V8.423c0-1.485.728-2.933 3.061-2.933h2.369V.867S13.968.5 11.913.5C7.623.5 4.82 3.1 4.82 7.808v4.138H.05v5.429h4.769V30.5h5.87V17.375z"/>
							</g>
						</g>
					</svg>
				</a>

				<a class="{{ component_class }}__link {{ component_class }}__link--twitter  {{ js_hook }}" href="https://twitter.com/intent/tweet/?text={{ post.title | url_encode }} - {{ site.name | url_encode }}&url={{ post.link | url_encode }}" target="_blank">
					<svg xmlns="http://www.w3.org/2000/svg" width="37" height="31" viewBox="0 0 37 31">
						<g>
							<g>
								<path fill="#fff"
									  d="M33.128 7.974c.023.328.023.656.023.984 0 10.003-7.614 21.53-21.53 21.53-4.288 0-8.27-1.242-11.621-3.397.61.07 1.195.094 1.827.094 3.538 0 6.795-1.195 9.395-3.233a7.58 7.58 0 0 1-7.075-5.248c.468.07.937.117 1.429.117.68 0 1.359-.094 1.991-.258A7.568 7.568 0 0 1 1.5 11.136v-.093a7.621 7.621 0 0 0 3.42.96 7.562 7.562 0 0 1-3.373-6.302 7.51 7.51 0 0 1 1.031-3.819A21.51 21.51 0 0 0 18.18 9.801a8.542 8.542 0 0 1-.187-1.734A7.564 7.564 0 0 1 25.56.5a7.55 7.55 0 0 1 5.53 2.39c1.71-.328 3.35-.96 4.802-1.828a7.547 7.547 0 0 1-3.327 4.17c1.523-.163 3-.585 4.358-1.17a16.267 16.267 0 0 1-3.795 3.912z"/>
							</g>
						</g>
					</svg>
				</a>

				<a class="{{ component_class }}__link {{ component_class }}__link--linkedin {{ js_hook }}" href="https://www.linkedin.com/shareArticle?mini=true&url={{ post.link | url_encode }}&title={{ post.title | url_encode }} - {{ site.name| url_encode }}&source={{ post.link | url_encode }}&summary={{ post.get_preview | url_encode }}" target="_blank">
					<svg xmlns="http://www.w3.org/2000/svg" width="30" height="31" viewBox="0 0 30 31">
						<g>
							<g>
								<path fill="#fff"
									  d="M23.787 30.5v-9.75c0-2.324-.047-5.304-3.234-5.304-3.233 0-3.729 2.524-3.729 5.136v9.917h-6.213V10.47h5.965v2.732h.087c.83-1.573 2.86-3.234 5.885-3.234 6.295 0 7.452 4.145 7.452 9.53v11.001zM3.602 7.737C1.613 7.738 0 6.091 0 4.102a3.602 3.602 0 1 1 7.204 0c0 1.989-1.614 3.636-3.602 3.636zM6.715 30.5H.495V10.47h6.22z"/>
							</g>
						</g>
					</svg>
				</a>
			</div>
		</div>
	</div>
{% endspaceless %}
