{% spaceless %}
	{#######################################################}
	{# --------------------------------------------------- #}
	{# Extending one of the Base Block Layout Types        #}
	{# 													   #}
	{# The block wrapper, title, content, button		   #}
	{# and container are declared inside the 		       #}
	{# base block layout          						   #}
	{# --------------------------------------------------- #}
	{#######################################################}
	{% extends '03-organisms/base/base-block/base-block.twig' %}

	{########################################################}
	{# Block general settings                               #}
	{########################################################}
	{% set component_class = "o-i360-cards-simple" %}
	{% set container       = true %}
	{% set brand_color_accent = section.brand_color_accent and section.version == "alt"	? component_class ~ "--brand-color-accent-" ~ section.brand_color_accent | join("") : "" %}

	{#################################################################################}
	{# ----------------------------------------------------------------------------- #}
	{# CUSTOM DEV: Add custom block specific stuff here by                           #}
	{# overwriting {% block %}'s defined in the chosen Base Block Layout Type above  #}
	{# ----------------------------------------------------------------------------- #}
	{#################################################################################}
	{% block main_payload %}
		<div class="{{ component_class }}__repeater {{ brand_color_accent }}">

			{% for item in section.repeater %}

				{% if section.version == "default" %}

					{% set icon_svg = item.icon_svg %}
					{% include '02-molecules/cards/card-icon-content/card-icon-content.twig' with {
						parent_class 		: component_class,
						item         		: item,
						icon_svg            : icon_svg,
						interval            : true,
						index       		: loop.index,
						add_class_on_anim   : true,
					} only %}

                {# Used for the cards that have a vertical line between them (design: Reference based pricing) #}
				{% elseif section.version == "alt" %}

					{# Accessing WordPress image object and making them available to Twig templates #}
					{% set img = TimberImage( item.thumbnail ) %}
					{% include '02-molecules/cards/card-simple-alt/card-simple-alt.twig' with {
						parent_class 		: component_class,
						item         		: item,
						img                 : img,
						interval            : true,
						index       		: loop.index,
						add_class_on_anim   : true,
					} only %}

				{# Used for the cards that are transparent and have a border (design: your health plan) #}
				{% elseif section.version == "transparent" %}

					{% include '02-molecules/cards/card-transparent/card-transparent.twig' with {
						parent_class 		: component_class,
						item         		: item,
						icon_svg            : icon_svg,
						interval            : true,
						index       		: loop.index,
						add_class_on_anim   : true,
					} only %}
				{% endif %}
			{% endfor %}
		</div>
	{% endblock %}

{% endspaceless %}
